#!/bin/sh
# postinst script for indimail
#
# see: dh_installdeb(1)

set -e
prefix=/usr
rm=/bin/rm
chown=/bin/chown
logdir=/var/log/svc
servicedir=/service

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

create_lcd_service()
{
	/bin/mkdir -p ${servicedir}/lcd-daemon/log
	conf_dir=${servicedir}/lcd-daemon/variables
	/bin/mkdir -p $conf_dir
	#lcd-daemon log script
	(
	echo "#!/bin/sh"
	echo "#"
	echo "# \$Id: create_service,v 1.1 2014-09-02 22:08:00+05:30 Cprogrammer Exp mbhangui $"
	echo ""
	echo "exec ${prefix}/bin/setuidgid qmaill \\"
	echo "${prefix}/sbin/multilog t ${logdir}/lcd-daemon"
	) > ${servicedir}/lcd-daemon/log/run
	/bin/chmod +x ${servicedir}/lcd-daemon/log/run

	(
	echo "#!/bin/sh"
	echo "#"
	echo "# \$Id: create_service,v 1.1 2014-09-02 22:08:00+05:30 Cprogrammer Exp mbhangui $"
	echo "#"
	echo
	echo
	echo "exec ${prefix}/bin/envdir ${servicedir}/lcd-daemon/variables \\"
	echo "  ${prefix}/sbin/lcdDaemon 2>&1"
	) > ${servicedir}/lcd-daemon/run
	/bin/chmod +x ${servicedir}/lcd-daemon/run

	if [ ! -d ${logdir}/lcd-daemon ] ; then
		/bin/mkdir -p ${logdir}/lcd-daemon
		$chown qmaill:nofiles ${logdir}/lcd-daemon
	fi
}

upgrade=0
case "$1" in
    configure)
	if [ -f /tmp/lcd-daemon/.install ] ; then
		upgrade=0
		/bin/rm -rf /tmp/lcd-daemon
	else
		if [ -n "$2" ] ; then
			upgrade=1
		fi
	fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
    ;;

    *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
if [ $upgrade -eq 1 ] ; then # upgrade
	set +e
	if [ -f /service/lcd-daemon/lcd-daemon.down ] ; then
		${rm} -f /service/lcd-daemon/lcd-daemon.down
		${prefix}/bin/svc -u /service/lcd-daemon 2>/dev/null || true
	fi
	set -e
	exit 0
fi

create_lcd_service
${rm} -f ${servicedir}/lcd-daemon/down
pid=`ps -ef|grep svscan|grep -E -v "multilog|grep"|awk '{print $2}'`
if [ -n "$pid" ] ; then
	kill -1 $pid
fi
exit 0
